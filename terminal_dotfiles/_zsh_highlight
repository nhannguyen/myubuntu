
# Syntax highlighting
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor root)
source ~/myubuntu/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Personalize highlighting
ZSH_HIGHLIGHT_PATTERNS+=("rm -rf *" "fg=white,bold,bg=red")
ZSH_HIGHLIGHT_STYLES[alias]="fg=cyan,bold"
ZSH_HIGHLIGHT_STYLES[assign]="fg=bold"
ZSH_HIGHLIGHT_STYLES[back-double-quoted-argument]="fg=blue,bold"
ZSH_HIGHLIGHT_STYLES[back-quoted-argument]="fg=bold"
ZSH_HIGHLIGHT_STYLES[builtin]="fg=green,bold"
ZSH_HIGHLIGHT_STYLES[command]="fg=green,bold"
ZSH_HIGHLIGHT_STYLES[default]="bold"
ZSH_HIGHLIGHT_STYLES[dollar-double-quoted-argument]="fg=blue,bold"
ZSH_HIGHLIGHT_STYLES[double-hyphen-option]="fg=bold"
ZSH_HIGHLIGHT_STYLES[double-quoted-argument]="fg=blue,bold"
ZSH_HIGHLIGHT_STYLES[function]="fg=green,bold"
ZSH_HIGHLIGHT_STYLES[globbing]="fg=blue,bold"
ZSH_HIGHLIGHT_STYLES[hashed-command]="fg=green,bold"
ZSH_HIGHLIGHT_STYLES[path]="fg=yellow,bold"
ZSH_HIGHLIGHT_STYLES[precommand]="fg=green,bold"
ZSH_HIGHLIGHT_STYLES[single-hyphen-option]="fg=bold"
ZSH_HIGHLIGHT_STYLES[single-quoted-argument]="fg=blue,bold"
ZSH_HIGHLIGHT_STYLES[unknown-token]="fg=red"
