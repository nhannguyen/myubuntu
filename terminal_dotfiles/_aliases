# enable color support of ls and also add handy aliases
alias ls='ls --color=auto -CF'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# some more ls aliases
alias ll='ls -ahlF'
alias la='ls -AF'
alias lr='ls -R'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'


# Aliases for git
alias a='git add'
alias branch='git branch'
alias checkout='git checkout'
alias commit='git commit -m'
alias detail='git log --graph --decorate'
alias fetch='git fetch'
alias log='git log --graph --decorate --oneline'
alias merge='git merge'
alias pull='git pull'
alias push='git push'
alias remote='git remote'
alias status='git status'
alias submodule='git submodule'

# SimpleHTTPServer python to easily share files
alias http='python -m SimpleHTTPServer'

# Twistd is better
alias twistd='twistd -n web --path .'

# Aliases for tmux
alias attach='tmux attach'
alias detach='tmux detach'

# Aliases for chef
alias chef-solo='sudo chef-solo -c /etc/chef/solo.rb -j /etc/chef/node.json'

# Update ubuntu
alias update='sudo apt-get update && sudo apt-get -y upgrade'

# Shutdown and reboot
alias reboot='sudo reboot'
alias shutdown='sudo shutdown -P now'

# Highlight cat
alias cat='pygmentize -f 256 -O style=native -g'
