function mycd {
  if [[ $# -eq 0 ]]
  then
    dir=$(getent passwd "$USER" | cut -d: -f 6)
  else
    dir=$1
  fi
  cd $dir
  count=`la | wc -l`
  if [[ ! $count -gt 80 ]]
  then
    la
  else
    echo "$count files and directories"
  fi
}


###TODO
# Check for local file before downloading
function mydownload() {
  flag="--remote-name"
  url=""
  if [[ $# -eq 0 ]] || [[ $#  -gt 2 ]]
  then
    echo "Please provide URL"
  elif [[ $# -eq 2 ]]
  then
    if [[ $1 == '--continue' ]] || [[ $1 == '-c' ]]
    then
      flag="$flag --continue-at -"
      url=$2
    else
      echo "Invalid command"
    fi
  else
    url=$1
  fi
  echo "curl $flag $url"
  curl $flag $url
}

# General aliases
alias cd=mycd
alias lr='ls -R'
alias download=mydownload

# Aliases for git
alias log='git log --graph --decorate --oneline'
alias detail='git log'
alias remote='git remote'
alias a='git add'
alias pull='git pull'
alias push='git push'
alias status='git status'
alias commit='git commit -m'
alias merge='git merge'
alias fetch='git fetch'
alias checkout='git checkout'
alias branch='git branch'

# SimpleHTTPServer python to easily share files
alias http='python -m SimpleHTTPServer'

# Aliases for tmux
alias attach='tmux attach'
alias detach='tmux detach'

# Aliases for chef
alias chef-solo='sudo chef-solo -c /etc/chef/solo.rb -j /etc/chef/node.json'

# Update ubuntu
alias update='sudo apt-get update && sudo apt-get -y dist-upgrade'

# Shutdown and reboot
alias reboot='sudo reboot'
alias shutdown='sudo shutdown -P now'
