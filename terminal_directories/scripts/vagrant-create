#!/bin/bash

# Default VM name is test
if [ "$1" == "" ]
then
  H="test"
else
  H=$1
fi

#
# Default OS is precise32
# For now I have the following list of boxes:
#   centos6
#   debian32
#   lucid32
#   precise32
#   precise64
#
if [ "$2" == "" ]
then
  OS="precise32"
else
  OS=$2
fi

echo "${white}mkdir -p $H/chef/site-cookbooks"
mkdir -p $H/chef/site-cookbooks
echo "${white}cd $H"
cd $H
echo "${white}vagrant init $OS"
vagrant init $OS
echo "${white}ln -s ~/cogini/chef-cookbooks chef/chef-cookbooks"
ln -s ~/cogini/chef-cookbooks chef/chef-cookbooks
echo "${white}ln -s ~/cogini/chef-repo chef/chef-repo"
ln -s ~/cogini/chef-repo chef/chef-repo
