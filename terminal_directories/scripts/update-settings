#!/bin/bash

set -e

white='\e[0;37m'
yellow='\e[0;33m'

#if [[ -n $ZSH_VERSION ]]
#then
  #sh="zsh"
#elif [[ -n $BASH_VERSION ]]
#then
  #sh="bash"
#fi

if [[ $SHELL == "/bin/bash" ]]
then
  sh="bash"
elif [[ $SHELL == "/bin/zsh" ]]
then
  sh="zsh"
fi

echo -e "${yellow} cd $HOME/myubuntu${white}"
cd $HOME/myubuntu
echo -e "${yellow} git fetch${white}"
git fetch
echo -e "${yellow} git checkout $sh${white}"
git checkout $sh
echo -e "${yellow} git merge origin/$sh${white}"
git merge origin/$sh
echo -e "${yellow} git remote update${white}"
git remote update
echo -e "${yellow} apply-terminal${white}"
apply-terminal
