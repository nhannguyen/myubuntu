#!/bin/bash

set -e

green='\e[0;32m'
white='\e[1;37m'

echo -e "${white}apt-get -y autoclean"
apt-get -y autoclean
echo -e "${white}apt-get -y autoremove"
apt-get -y autoremove

# Clean old package configuration files
packages=`dpkg -l | awk '/^rc/{ print $2}'`
if [[ $packages == "" ]]
then
  echo -e "${green}No old configurations found${white}"
else
  dpkg -l | awk '/^rc/{ print $2}' | xargs dpkg --purge
  echo -e "${white}Finished cleaning"
fi
